@model IEnumerable<PRONEXEL_Data.Models.Dto.TopicCategoryModel>

@{
    ViewData["Title"] = "AllCategory";
}
<div class="nk-block nk-block-lg">
    <div class="nk-block-head">

        <div class="nk-block-between g-3">
            <div class="nk-block-head-content">
                <h3 class="nk-block-title page-title">All Topics</h3>
                <div class="nk-block-des text-soft">
                </div>
            </div>

            <div class="nk-block-head-content">
                <div class="toggle-wrap nk-block-tools-toggle">
                    <a href="#" class="btn btn-icon btn-trigger toggle-expand mr-n1" data-target="pageMenu"><em class="icon ni ni-more-v"></em></a>
                    <div class="toggle-expand-content" data-content="pageMenu">
                        <ul class="nk-block-tools g-3">

                            <li class="nk-block-tools-opt"><a href="~/Content/AddCategory" class="btn btn-primary"><em class="icon ni ni-reports"></em><span>Add Topic</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- .nk-block-head-content -->


        </div>

    </div>
    <div class="card card-preview">
        <div class="card-inner">

            <table class="datatable-init-export nowrap table">
                <thead>
                    <tr>
                        <th>Topic Name</th>
                        <th>Topic Description</th>
                        <th>Created By</th>
                        <th>Created On</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>


                            <td>
                                @Html.DisplayFor(modelItem => item.TopicName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TopicDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedByName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Status)

                            </td>
                            <td>
                                <a href="~/Employeeside/InvoiceDetails?invno=@item.ID" class="btn btn-danger btn-sm">Delete</a>
                                  <a href="~/Employeeside/InvoiceDetails?invno=@item.ID" class="btn btn-primary btn-sm">Edit</a>

                            </td>


                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div><!-- .card-preview -->
</div>

<script type="text/javascript">

    function DeleteMainEvent(id) {

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!'
        }).then(function (result) {
            if (result.value) {
                $.ajax({
                    url: '/AdminSide/DeleteMainEvent'
                    , type: 'GET'
                    , data: { id: id }
                    , contentType: 'application/json'
                    , success: function (response) {

                        Swal.fire('Deleted!', 'Your file has been deleted.', 'success');
                        location.reload();
                    }
                });

            }
        });

    }

</script>