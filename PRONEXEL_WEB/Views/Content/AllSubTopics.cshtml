@model IEnumerable<PRONEXEL_Data.Models.Dto.TopicSubcategoryModel>

@{
    ViewData["Title"] = "AllCategory";
}
<div class="nk-block nk-block-lg">
    <div class="nk-block-head">

        <div class="nk-block-between g-3">
            <div class="nk-block-head-content">
                <h3 class="nk-block-title page-title">All Sub Topics</h3>
                <div class="nk-block-des text-soft">
                </div>
            </div>

            <div class="nk-block-head-content">
                <div class="toggle-wrap nk-block-tools-toggle">
                    <a href="#" class="btn btn-icon btn-trigger toggle-expand mr-n1" data-target="pageMenu"><em class="icon ni ni-more-v"></em></a>
                    <div class="toggle-expand-content" data-content="pageMenu">
                        <ul class="nk-block-tools g-3">

                            <li class="nk-block-tools-opt"><a href="~/Content/AddCategory" class="btn btn-primary"><em class="icon ni ni-reports"></em><span>Add Topic</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- .nk-block-head-content -->


        </div>

    </div>
    <div class="card card-preview">
        <div class="card-inner">
            <div>
                <!-- Added wrapper for horizontal scrolling -->
                <table class="datatable-init-export nowrap table">
                    <thead>
                        <tr>
                            <th>Topic Name</th>
                            <th>Sub Topic Name</th>
                            <th>Created On</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody style="overflow-x: auto;">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TopicName)</td>
                                <td>@Html.DisplayFor(modelItem => item.SubTopicName)</td>

                            
                                <td>@Html.DisplayFor(modelItem => item.CreatedOn)</td>
                                <td>
                                    <a href="~/Content/SubTopicDetails?id=@item.SubTopicID" class="btn btn-success btn-sm">Details</a>
                                    <a href="~/Content/DeleteSubTopic?id=@item.SubTopicID" class="btn btn-danger btn-sm">Delete</a>
                                    <a href="~/Content/EditSubTopic?id=@item.SubTopicID" class="btn btn-primary btn-sm">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">

    function DeleteMainEvent(id) {

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!'
        }).then(function (result) {
            if (result.value) {
                $.ajax({
                    url: '/AdminSide/DeleteMainEvent'
                    , type: 'GET'
                    , data: { id: id }
                    , contentType: 'application/json'
                    , success: function (response) {

                        Swal.fire('Deleted!', 'Your file has been deleted.', 'success');
                        location.reload();
                    }
                });

            }
        });

    }

</script>